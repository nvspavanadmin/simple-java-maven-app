pipeline{
    agent any
    environment {
        scannerHome = tool 'sonarscanner5.0.1'
    }
    stages{
        stage('build stage'){
            steps{
                sh 'mvn install'
            }
        }
        stage('code scan'){
            steps {
                withSonarQubeEnv('mysonarqube') {
                    sh '''$SCANNER_HOME/bin/sonar-scanner\
                     -Dsonar.projectKey=java-project-key \
                    -Dsonar.projectName=java-scaneer \
                    -Dsonar.sources=. \
                    -Dsonar.java.binaries=target/classes \
                    -Dsonar.sourceEncoding=UTF-8
                    '''
                }
            }
        }
        
    }
}